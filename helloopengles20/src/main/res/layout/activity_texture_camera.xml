<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_texture_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kikyo.textureview.TextureCamera">

    <TextureView
        android:id="@+id/mTxv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/mBtnZoomIn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="zoom in"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/mBtnZoomOut"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:text="zoom out"
        android:layout_toRightOf="@id/mBtnZoomIn"/>
    <Button
        android:id="@+id/mBtnOpenCamera"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:text="open camera"
        android:layout_toRightOf="@id/mBtnZoomOut"/>
</RelativeLayout>
